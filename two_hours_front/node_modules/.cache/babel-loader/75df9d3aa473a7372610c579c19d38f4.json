{"ast":null,"code":"//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\nimport AdmNoticeDrawer from \"@/components/AdmNoticeDrawer\";\nimport Ckeditor4 from \"@/components/Ckeditor4\";\nexport default {\n  name: 'AdmNoticeTab',\n  components: {\n    Ckeditor4: Ckeditor4,\n    AdmNoticeDrawer: AdmNoticeDrawer\n  },\n  data: function data() {\n    return {\n      // 当前页码\n      noticeCurrentPage: 1,\n      // 分页大小\n      noticePageSize: 10,\n      // 总页码数\n      noticeTotalCount: 99,\n      // 搜索表单数据模型\n      searchTitle: {\n        title: ''\n      },\n      // 内置查询模型\n      searchNoticeByTitle: {\n        title: ''\n      },\n      // 创建通知数据模型\n      createNoticeData: {\n        title: '',\n        content: ''\n      },\n      // 编辑通知数据模型\n      updateNoticeData: {\n        noticeId: -1,\n        title: '',\n        content: ''\n      },\n      // 通知发布对话框\n      noticeEditDialogVisible: false,\n      // 编辑通知对话框\n      noticeUpdateDialogVisible: false,\n      // 通知数据列表\n      noticeTableData: [],\n      // 对话框销毁器\n      closeDialog: false,\n      // 公告抽屉\n      noticeDrawer: false,\n      noticeDrawerContent: '' // 内容\n\n    };\n  },\n  created: function created() {\n    this.getNoticeByTitle();\n  },\n  methods: {\n    // 查找通知\n    // 系统内置一个title，默认为空，即全查询。每次条件查询都会把条件赋给该title。\n    // 因此这样点击分页栏时可以正常显示查询结果。\n    getNoticeByTitle: function getNoticeByTitle() {\n      var _this = this;\n\n      this.searchNoticeByTitle[\"pageSize\"] = this.noticePageSize;\n      this.searchNoticeByTitle[\"currentPage\"] = this.noticeCurrentPage;\n      this.$axios.post(\"/NoticeAdm/getPageByCondition\", this.searchNoticeByTitle).then(function (res) {\n        if (res.data.flag) {\n          /* 保存公告数据 */\n          _this.noticeTableData = res.data.data.records;\n          /* 保存分页数据 */\n\n          _this.noticeTotalCount = res.data.data.total;\n          _this.noticeCurrentPage = res.data.data.current;\n          _this.noticePageSize = res.data.data.size;\n        } else {\n          // 服务故障\n          _this.$message.error(\"信息获取失败！\");\n        }\n      });\n    },\n    // 表格颜色控制\n    tableRowClassName: function tableRowClassName(_ref) {\n      var row = _ref.row,\n          rowIndex = _ref.rowIndex;\n\n      if (rowIndex % 4 === 1) {\n        return 'warning-row';\n      } else if (rowIndex % 4 === 3) {\n        return 'success-row';\n      }\n\n      return '';\n    },\n    // 新建通知\n    createNoticeOnSubmit: function createNoticeOnSubmit() {\n      this.noticeEditDialogVisible = true;\n      this.closeDialog = true;\n    },\n    // 查询通知\n    searchNoticeOnSubmit: function searchNoticeOnSubmit(title) {\n      // 刷新查询条件\n      this.searchNoticeByTitle.title = title; // 执行查询\n\n      this.getNoticeByTitle();\n      /* 清空查询条件 */\n\n      this.searchTitle.title = '';\n    },\n    // 创建通知\n    createNotice: function createNotice(notice) {\n      var _this2 = this;\n\n      if (notice.title === '' || notice.content === '') {\n        this.$message.warning(\"请填写完整再提交！\");\n        return;\n      } // 保存到数据库\n\n\n      this.$axios.post(\"/NoticeAdm/createNotice\", notice).then(function (res) {\n        if (res.data.flag) {\n          // 修改成功\n          _this2.$message.success(res.data.msg); // 刷新通知数据\n\n\n          _this2.getNoticeByTitle(); // 关闭编辑窗口\n\n\n          _this2.noticeEditDialogVisible = false; // 重置模型\n\n          _this2.createNoticeData.title = '';\n          _this2.createNoticeData.content = '';\n        } else {\n          // 服务故障\n          _this2.$message.error(res.data.msg);\n        }\n      });\n    },\n    // 编辑通知激活\n    editNotice: function editNotice(row) {\n      // 预先绑定数据\n      this.updateNoticeData.title = row.title;\n      this.updateNoticeData.content = row.content;\n      this.updateNoticeData.noticeId = row.noticeId;\n      this.closeDialog = true;\n      this.noticeUpdateDialogVisible = true;\n    },\n    // 编辑通知\n    updateNotice: function updateNotice(notice) {\n      var _this3 = this;\n\n      if (notice.title === '' || notice.content === '') {\n        this.$message.warning(\"请填写完整再提交！\");\n        return;\n      } // 保存到数据库\n\n\n      this.$axios.post(\"/NoticeAdm/updateNotice\", notice).then(function (res) {\n        if (res.data.flag) {\n          // 修改成功\n          _this3.$message.success(res.data.msg); // 刷新课程数据\n\n\n          _this3.getNoticeByTitle(); // 关闭编辑窗口\n\n\n          _this3.noticeUpdateDialogVisible = false; // 重置模型\n\n          _this3.updateNoticeData.title = '';\n          _this3.updateNoticeData.noticeId = -1;\n          _this3.updateNoticeData.content = '';\n        } else {\n          // 服务故障\n          _this3.$message.error(res.data.msg);\n        }\n      });\n    },\n    // 编辑通知dialog销毁\n    noticeDialogHandleClose: function noticeDialogHandleClose() {\n      // 手动销毁\n      this.closeDialog = false;\n    },\n    // 当某行数据被点击\n    noticeRowClick: function noticeRowClick(row, column) {\n      var _this4 = this;\n\n      // 排除操作列\n      if (column.label === '操作') return;\n      this.noticeDrawer = true;\n      this.noticeDrawerContent = row; // 发送一次请求\n\n      setTimeout(function () {\n        _this4.noticeDrawer = false;\n      }, 500);\n    },\n    // 删除通知\n    deleteNotice: function deleteNotice(row) {\n      var _this5 = this;\n\n      // 弹框确认\n      this.$confirm('此操作将删除该通知, 是否继续?', '提示', {\n        confirmButtonText: '确定',\n        cancelButtonText: '取消',\n        type: 'warning'\n      }).then(function () {\n        var notice = {\n          noticeId: row.noticeId\n        }; // 执行删除\n\n        _this5.$axios.post(\"/NoticeAdm/deleteNoticeById\", notice).then(function (resp) {\n          if (resp.data.flag) {\n            // 删除成功，刷新数据\n            _this5.getNoticeByTitle();\n\n            _this5.$message.success('删除成功！');\n          } else {\n            _this5.$message.error('删除失败！');\n          }\n        });\n      }).catch(function () {\n        // 取消删除\n        _this5.$message.info('取消删除');\n      });\n    },\n    // 分页大小变化\n    noticeHandleSizeChange: function noticeHandleSizeChange(val) {\n      this.noticePageSize = val; // 查询所有通知\n\n      this.getNoticeByTitle();\n    },\n    // 当前页变化\n    noticeHandleCurrentChange: function noticeHandleCurrentChange(val) {\n      this.noticeCurrentPage = val; // 查询所有通知\n\n      this.getNoticeByTitle();\n    }\n  }\n};","map":{"version":3,"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAiJA;AACA;AACA;AACAA,sBADA;AAEAC;AACAC,wBADA;AAEAC;AAFA,GAFA;AAMAC,MANA,kBAMA;AACA;AACA;AACAC,0BAFA;AAGA;AACAC,wBAJA;AAKA;AACAC,0BANA;AAOA;AACAC;AACAC;AADA,OARA;AAWA;AACAC;AACAD;AADA,OAZA;AAeA;AACAE;AACAF,iBADA;AAEAG;AAFA,OAhBA;AAoBA;AACAC;AACAC,oBADA;AAEAL,iBAFA;AAGAG;AAHA,OArBA;AA0BA;AACAG,oCA3BA;AA4BA;AACAC,sCA7BA;AA8BA;AACAC,yBA/BA;AAgCA;AACAC,wBAjCA;AAkCA;AACAC,yBAnCA;AAoCAC,6BApCA,CAoCA;;AApCA;AAsCA,GA7CA;AA8CAC,SA9CA,qBA8CA;AACA;AACA,GAhDA;AAiDAC;AACA;AACA;AACA;AACAC,oBAJA,8BAIA;AAAA;;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AACA;AACA;AACA;AACA,SAPA,MAOA;AACA;AACA;AACA;AACA,OAZA;AAaA,KApBA;AAqBA;AACAC,qBAtBA,mCAsBA;AAAA;AAAA;;AACA;AACA;AACA,OAFA,MAEA;AACA;AACA;;AACA;AACA,KA7BA;AA8BA;AACAC,wBA/BA,kCA+BA;AACA;AACA;AACA,KAlCA;AAmCA;AACAC,wBApCA,gCAoCAjB,KApCA,EAoCA;AACA;AACA,6CAFA,CAGA;;AACA;AACA;;AACA;AACA,KA3CA;AA4CA;AACAkB,gBA7CA,wBA6CAC,MA7CA,EA6CA;AAAA;;AACA;AACA;AACA;AACA,OAJA,CAKA;;;AACA;AACA;AACA;AACA,gDAFA,CAGA;;;AACA,oCAJA,CAKA;;;AACA,iDANA,CAOA;;AACA;AACA;AACA