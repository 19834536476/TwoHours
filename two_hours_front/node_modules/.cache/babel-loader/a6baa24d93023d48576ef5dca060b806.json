{"ast":null,"code":"//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\nimport Ckeditor4 from \"@/components/Ckeditor4\";\nexport default {\n  name: \"StuChapterView\",\n  components: {\n    Ckeditor4: Ckeditor4\n  },\n  data: function data() {\n    return {\n      user: '',\n      chapter: '',\n      replies: [],\n      // 已点过赞\n      isLiked: false,\n      // 回复发布对话框\n      EditDialogVisible: false,\n      // 对话框销毁器\n      closeDialog: false,\n      // 新建回复\n      replyData: {\n        replyId: '',\n        chapterId: '',\n        fromUid: '',\n        toUid: '',\n        content: ''\n      },\n      // 编辑回复而不是创建回复\n      editNotCreate: false\n    };\n  },\n  created: function created() {\n    // 初始化信息\n    this.getUser();\n  },\n  methods: {\n    // 获取用户数据\n    getUser: function getUser() {\n      var _this = this;\n\n      this.$axios.get(\"/Users/isUserLogin\").then(function (res) {\n        if (res.data.flag) {\n          // 保存用户数据\n          _this.user = res.data.data; // 5秒后增加一次播放量\n\n          _this.addViews(); // 获取章节数据\n\n\n          _this.getChapter(); // 获取该讨论下的全部回复\n\n\n          _this.getReplies();\n        } else {\n          // 服务故障-跳转登陆界面\n          _this.$router.push({\n            name: 'Login'\n          });\n        }\n      });\n    },\n    // 增加一次播放量\n    addViews: function addViews() {\n      var _this2 = this;\n\n      var chapter = {\n        chapterId: this.$route.params.chapterId\n      }; // 5秒后增加一次播放量\n\n      setTimeout(function () {\n        _this2.$axios.post(\"/Chapter/addViews\", chapter);\n      }, 5000);\n    },\n    // 获取章节信息\n    getChapter: function getChapter() {\n      var _this3 = this;\n\n      var chapter = {\n        chapterId: this.$route.params.chapterId\n      };\n      this.$axios.post(\"/Chapter/getChapterById\", chapter).then(function (res) {\n        if (res.data.flag) {\n          _this3.chapter = res.data.data; // 是否点过赞\n\n          _this3.getIsLiked();\n        } else {\n          _this3.$message.error(\"讨论数据获取失败，请稍后重试！\");\n        }\n      });\n    },\n    // 获取是否点赞记录\n    getIsLiked: function getIsLiked() {\n      var _this4 = this;\n\n      var chapter = {\n        chapterId: this.chapter.chapterId\n      };\n      this.$axios.post(\"/Chapter/isLiked\", chapter).then(function (res) {\n        if (res.data.flag) {\n          _this4.isLiked = res.data.data > 0;\n        } else {\n          _this4.$message.error(\"数据获取失败！\");\n        }\n      });\n    },\n    // 点赞讨论\n    discussionLike: function discussionLike() {\n      var _this5 = this;\n\n      this.isLiked = true;\n      var chapter = {\n        chapterId: this.chapter.chapterId\n      };\n      this.$axios.post(\"/Chapter/likeThis\", chapter).then(function (res) {\n        if (res.data.flag) {\n          // 刷新讨论数据\n          _this5.getChapter();\n        } else {\n          _this5.$message.error(\"数据获取失败！\");\n\n          _this5.isLiked = false;\n        }\n      });\n    },\n    // 取消点赞\n    cancelLike: function cancelLike() {\n      var _this6 = this;\n\n      this.isLiked = false;\n      var chapter = {\n        chapterId: this.chapter.chapterId\n      };\n      this.$axios.post(\"/Chapter/cancelLike\", chapter).then(function (res) {\n        if (res.data.flag) {\n          // 刷新讨论数据\n          _this6.getChapter();\n        } else {\n          _this6.$message.error(\"数据获取失败！\");\n\n          _this6.isLiked = true;\n        }\n      });\n    },\n    // 获取该讨论的全部回复\n    getReplies: function getReplies() {\n      var _this7 = this;\n\n      var reply = {\n        chapterId: this.$route.params.chapterId\n      };\n      this.$axios.post(\"/Reply/getReplies\", reply).then(function (res) {\n        if (res.data.flag) {\n          _this7.replies = res.data.data;\n          console.log(_this7.replies);\n          if (_this7.replies.length === 0) _this7.replies = undefined;\n        } else {\n          _this7.$message.error(\"回复数据获取失败，请稍后重试！\");\n        }\n      });\n    },\n    // 创建回复\n    createReply: function createReply(toUid) {\n      // 数据封装\n      this.replyData.chapterId = this.chapter.chapterId;\n      this.replyData.fromUid = this.user.userId;\n      this.replyData.toUid = toUid;\n      this.replyData.content = ''; // 启动输入框\n\n      this.EditDialogVisible = true;\n      this.closeDialog = true;\n    },\n    // 回复Dialog销毁\n    dialogHandleClose: function dialogHandleClose() {\n      // 手动销毁\n      this.closeDialog = false;\n    },\n    // 编辑回复\n    editReply: function editReply(reply) {\n      // 数据封装\n      this.replyData.replyId = reply.replyId;\n      this.replyData.chapterId = reply.chapterId;\n      this.replyData.fromUid = reply.fromUid;\n      this.replyData.toUid = reply.toUid;\n      this.replyData.content = reply.content; // 打开编辑回复提交开关-Dialog提交时调用编辑接口\n\n      this.editNotCreate = true; // 启动输入框\n\n      this.EditDialogVisible = true;\n      this.closeDialog = true;\n    },\n    // 删除回复\n    deleteReply: function deleteReply(replyId) {\n      var _this8 = this;\n\n      // 弹框确认\n      this.$confirm('此操作将删除该回复, 是否继续?', '提示', {\n        confirmButtonText: '确定',\n        cancelButtonText: '取消',\n        type: 'warning'\n      }).then(function () {\n        var reply = {\n          replyId: replyId\n        }; // 执行删除\n\n        _this8.$axios.post(\"/Reply/deleteReplyById\", reply).then(function (resp) {\n          if (resp.data.flag) {\n            // 删除成功，刷新数据\n            _this8.getReplies();\n\n            _this8.$message.success('删除成功！');\n          } else {\n            _this8.$message.error('删除失败！');\n          }\n        });\n      }).catch(function () {\n        // 取消删除\n        _this8.$message.info('取消删除');\n      });\n    },\n    // 提交Dialog编辑\n    onCommit: function onCommit(reply) {\n      var _this9 = this;\n\n      if (this.editNotCreate) {\n        // 编辑回复\n        this.$axios.post(\"/Reply/editReplies\", reply).then(function (res) {\n          if (res.data.flag) {\n            _this9.$message.success(\"编辑成功！\"); // 刷新讨论数据\n\n\n            _this9.getReplies();\n\n            _this9.EditDialogVisible = false;\n            _this9.replyData.content = '';\n          } else {\n            _this9.$message.error(\"回复失败，请稍后重试！\");\n          }\n        }); // 使用后关闭编辑模式\n\n        this.editNotCreate = false;\n      } else {\n        // 创建回复\n        this.$axios.post(\"/Reply/createReplies\", reply).then(function (res) {\n          if (res.data.flag) {\n            _this9.$message.success(\"回复成功！\"); // 刷新讨论数据\n\n\n            _this9.getReplies();\n\n            _this9.EditDialogVisible = false;\n            _this9.replyData.content = '';\n          } else {\n            _this9.$message.error(\"回复失败，请稍后重试！\");\n          }\n        });\n      }\n    }\n  }\n};","map":{"version":3,"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAyHA;AACA;AACAA,wBADA;AAEAC;AACAC;AADA,GAFA;AAKAC,MALA,kBAKA;AACA;AACAC,cADA;AAEAC,iBAFA;AAGAC,iBAHA;AAIA;AACAC,oBALA;AAMA;AACAC,8BAPA;AAQA;AACAC,wBATA;AAUA;AACAC;AACAC,mBADA;AAEAC,qBAFA;AAGAC,mBAHA;AAIAC,iBAJA;AAKAC;AALA,OAXA;AAkBA;AACAC;AAnBA;AAqBA,GA3BA;AA4BAC,SA5BA,qBA4BA;AACA;AACA;AACA,GA/BA;AAgCAC;AACA;AACAC,WAFA,qBAEA;AAAA;;AACA;AACA;AACA;AACA,qCAFA,CAGA;;AACA,2BAJA,CAKA;;;AACA,6BANA,CAOA;;;AACA;AACA,SATA,MASA;AACA;AACA;AAAAnB;AAAA;AACA;AACA,OAdA;AAeA,KAlBA;AAmBA;AACAoB,YApBA,sBAoBA;AAAA;;AACA;AAAAR;AAAA,QADA,CAEA;;AACAS;AAAA;AAAA;AACA,KAxBA;AAyBA;AACAC,cA1BA,wBA0BA;AAAA;;AACA;AAAAV;AAAA;AACA;AACA;AACA,yCADA,CAEA;;AACA;AACA,SAJA,MAIA;AACA;AACA;AACA,OARA;AASA,KArCA;AAsCA;AACAW,cAvCA,wBA