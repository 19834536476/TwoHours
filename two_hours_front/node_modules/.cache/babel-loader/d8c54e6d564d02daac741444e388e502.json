eteReply","confirmButtonText","cancelButtonText","type","then","catch","dialogHandleClose","onCommit"],"sourceRoot":"src/pages/user/teacherComponents","sources":["DiscussionView.vue"],"sourcesContent":["<template>\r\n    <div>\r\n        <!-- 讨论详情 -->\r\n        <div>\r\n            <el-card :body-style=\"{ padding: '0px'}\" style=\"margin-top: 2em\">\r\n                <div  id=\"DiscussionCards\">\r\n                    <el-row>\r\n                        <el-col :span=\"1\">\r\n                            <user-avatar :src=\"discussion.userAvatar\" id=\"discussionUserAvatar\"/>\r\n                        </el-col>\r\n                        <el-col :span=\"23\">\r\n                            <!-- 发布者和时间 -->\r\n                            <div style=\"margin-top: 20px;\">\r\n                                <span id=\"discussionUser\">发布者：{{discussion.username}}</span>\r\n                                <span id=\"discussionDate\">{{discussion.formatDate}}</span>\r\n                            </div>\r\n                            <!-- 标题 -->\r\n                            <div style=\"margin-top: 10px;\">\r\n                                <span id=\"discussionTitle\">{{discussion.title}}</span>\r\n                            </div>\r\n                            <!-- 内容 -->\r\n                            <div id=\"discussionContent\" v-html=\"discussion.content\">{{discussion.content}}</div>\r\n                            <!-- 功能栏 -->\r\n                            <div id=\"discussionController\">\r\n                                <span class=\"discussionDetail\"><i class=\"el-icon-view\"style=\"margin-right: 0.5em\"></i>{{discussion.hits}}</span>\r\n                                <span class=\"discussionDetail\"><i class=\"ali-iconzan3\"style=\"font-size:1em;margin-right: 0.5em\"></i>{{discussion.likes}}</span>\r\n                                <!-- 回复按钮 -->\r\n                                <span class=\"functionReply discussionReply\" style=\"position: absolute; left: 94.5%;\" @click=\"createReply(null)\">\r\n                                    <i class=\"el-icon-chat-dot-square\"></i>\r\n                                </span>\r\n                            </div>\r\n                        </el-col>\r\n                    </el-row>\r\n                </div>\r\n            </el-card>\r\n        </div>\r\n\r\n        <div style=\"margin: 30px;font-size: 18px\">评论区</div>\r\n\r\n        <!-- 回复列表 -->\r\n        <div>\r\n            <el-card :body-style=\"{ padding: '0px' }\">\r\n                <!-- 回复卡片 -->\r\n                <div id=\"RepliesCards\">\r\n                    <!-- 暂无回复 -->\r\n                    <div v-if=\"replies === undefined\" id=\"NoReplies\">暂无回复</div>\r\n                    <!-- 每条回复 -->\r\n                    <div  v-for=\"(item,index) in replies\"\r\n                          :key=\"item.replyId\"\r\n                          class=\"RepliesRow\">\r\n                        <!-- 分割线 -->\r\n                        <el-divider v-if=\"index !== 0\" class=\"ReplyDivider\"></el-divider>\r\n                        <!-- 回复内容 -->\r\n                        <div>\r\n                            <el-row>\r\n                                <!-- 头像 -->\r\n                                <el-col :span=\"1\">\r\n                                    <user-avatar :width=\"40\" :height=\"40\" :src=\"item.fromUserAvatar\" />\r\n                                </el-col>\r\n                                <!-- 内容 -->\r\n                                <el-col  :span=\"22\" style=\"position: relative\">\r\n                                    <!-- 用户名和时间 -->\r\n                                    <div style=\"margin-bottom: 10px\">\r\n                                        <span class=\"fromUserName\">{{item.fromUsername}}</span>\r\n                                        <span class=\"ReplyDate\">{{item.formatDate}}</span>\r\n                                    </div>\r\n                                    <!-- 回复内容 -->\r\n                                    <div>\r\n                                        <!-- @目标用户 -->\r\n                                        <span v-if=\"item.toUsername\" class=\"toUsername\">@{{item.toUsername}}：</span>\r\n                                        <p v-html=\"item.content\" class=\"ReplyContent\">{{item.content}}</p>\r\n                                    </div>\r\n                                    <!-- 功能区 -->\r\n                                    <div style=\"text-align: right\">\r\n                                        <!-- 回复 -->\r\n                                        <span v-if=\"item.fromUid !== user.userId\"\r\n                                              class=\"functionReply discussionReply\"\r\n                                              @click=\"createReply(item.fromUid)\"><i class=\"el-icon-chat-dot-square\"></i> </span>\r\n                                        <!-- 编辑 -->\r\n                                        <span v-if=\"item.fromUid === user.userId\"\r\n                                              class=\"functionReply EditReply\"\r\n                                              @click=\"editReply(item)\"><i class=\"el-icon-edit\"></i> </span>\r\n                                        <!-- 删除-->\r\n                                        <span class=\"functionReply ReplyDelete\"\r\n                                              @click=\"deleteReply(item.replyId)\"\r\n                                              style=\"margin-left: 20px\"><i class=\"el-icon-delete\"></i> </span>\r\n                                    </div>\r\n                                </el-col>\r\n                            </el-row>\r\n                        </div>\r\n                    </div>\r\n                </div>\r\n                <div style=\"height: 20px\"></div>\r\n            </el-card>\r\n        </div>\r\n\r\n        <!--编辑回复对话框表单 -->\r\n        <el-dialog\r\n                v-if=\"closeDialog\"\r\n                title=\"输入内容\"\r\n                :visible.sync=\"EditDialogVisible\"\r\n                @close=\"dialogHandleClose\"\r\n                width=\"60%\">\r\n            <!-- 内容编辑 -->\r\n            <div class=\"discussionInput\">在此输入</div>\r\n            <Ckeditor4 v-model=\"replyData.content\"></Ckeditor4>\r\n            <el-button type=\"text\"\r\n                       style=\"font-size: 16px;margin-top: 15px\"\r\n                       @click=\"onCommit(replyData)\">\r\n                保存编辑\r\n            </el-button>\r\n        </el-dialog>\r\n\r\n    </div>\r\n</template>\r\n\r\n<script>\r\n    import UserAvatar from \"@/components/UserAvatar\";\r\n    import Ckeditor4 from \"@/components/Ckeditor4\";\r\n    export default {\r\n        name: \"OneDiscussion\",\r\n        components:{\r\n            UserAvatar,\r\n            Ckeditor4,\r\n        },\r\n        data(){\r\n            return{\r\n                user:'',\r\n                discussion:'',\r\n                replies:[],\r\n                // 讨论发布对话框\r\n                EditDialogVisible:false,\r\n                // 对话框销毁器\r\n                closeDialog:false,\r\n                // 新建回复\r\n                replyData: {\r\n                    replyId: '',\r\n                    discussionId:'',\r\n                    fromUid:'',\r\n                    toUid:'',\r\n                    content:'',\r\n                },\r\n                // 编辑回复而不是创建回复\r\n                editNotCreate:false,\r\n            }\r\n        },\r\n        created() {\r\n            this.openLoading();\r\n            // 初始化信息\r\n            this.getUser();\r\n        },\r\n        methods:{\r\n            /* 加载动画 */\r\n            openLoading(){\r\n                let loading = this.$loading({\r\n                    lock: true,\r\n                    text: 'Loading',\r\n                    spinner: 'el-icon-loading',\r\n                    background: 'rgba(255,255,255,0.8)'\r\n                });\r\n                setTimeout(()=>{loading.close();},400)\r\n            },\r\n            // 获取用户数据\r\n            getUser(){\r\n                this.$axios.get(\"/Users/isUserLogin\").then((res)=>{\r\n                    if(res.data.flag){\r\n                        // 保存用户数据\r\n                        this.user = res.data.data;\r\n                        // 初始化讨论数据\r\n                        this.getDiscussion();\r\n                    }else{\r\n                        // 服务故障-跳转登陆界面\r\n                        this.$router.push({name:'Login'});\r\n                    }\r\n                });\r\n            },\r\n            // 获取讨论的具体数据\r\n            getDiscussion(){\r\n                let discussion = {discussionId:this.$route.params.discussionId};\r\n                this.$axios.post(\"/Discussion/getDiscussionById\",discussion).then((res)=>{\r\n                    if(res.data.flag){\r\n                        this.discussion = res.data.data;\r\n                        // 获取该讨论下的全部回复\r\n                        this.getReplies();\r\n                    }else{\r\n                        this.$message.error(\"讨论数据获取失败，请稍后重试！\");\r\n                    }\r\n                })\r\n            },\r\n            // 获取该讨论的全部回复\r\n            getReplies(){\r\n                let reply = {discussionId:this.discussion.discussionId};\r\n                this.$axios.post(\"/Reply/getReplies\",reply).then((res)=>{\r\n                    if(res.data.flag){\r\n                        this.replies = res.data.data;\r\n                        if(this.replies.length === 0)this.replies = undefined;\r\n                    }else{\r\n                        this.$message.error(\"回复数据获取失败，请稍后重试！\");\r\n                    }\r\n                })\r\n            },\r\n            // 创建回复\r\n            createReply(toUid){\r\n                // 数据封装\r\n                this.replyData.discussionId = this.discussion.discussionId;\r\n                this.replyData.fromUid = this.user.userId;\r\n                this.replyData.toUid  = toUid;\r\n                this.replyData.content = '';\r\n                // 启动输入框\r\n                this.EditDialogVisible=true;\r\n                this.closeDialog=true;\r\n            },\r\n            // 编辑回复\r\n            editReply(reply){\r\n                // 数据封装\r\n                this.replyData.replyId = reply.replyId;\r\n                this.replyData.discussionId = reply.discussionId;\r\n                this.replyData.fromUid = reply.fromUid;\r\n                this.replyData.toUid  = reply.toUid;\r\n                this.replyData.content  = reply.content;\r\n                // 打开编辑回复提交开关-Dialog提交时调用编辑接口\r\n                this.editNotCreate = true;\r\n                // 启动输入框\r\n                this.EditDialogVisible=true;\r\n                this.closeDialog=true;\r\n            },\r\n            // 删除回复\r\n            deleteReply(replyId){\r\n                // 弹框确认\r\n                this.$confirm('此操作将删除该回复, 是否继续?', '提示', {\r\n                    confirmButtonText: '确定',\r\n                    cancelButtonText: '取消',\r\n                    type: 'warning'\r\n                }).then(() => {\r\n                    let reply = {replyId:replyId};\r\n                    // 执行删除\r\n                    this.$axios.post(\"/Reply/deleteReplyById\",reply).then(resp=>{\r\n                        if(resp.data.flag){\r\n                            // 删除成功，刷新数据\r\n                            this.getReplies();\r\n                            this.$message.success('删除成功！');\r\n                        }else{\r\n                            this.$message.error('删除失败！');\r\n                        }\r\n                    })\r\n                }).catch(() => {\r\n                    // 取消删除\r\n                    this.$message.info('取消删除');\r\n                });\r\n            },\r\n            // 回复Dialog销毁\r\n            dialogHandleClose(){\r\n                // 手动销毁\r\n                this.closeDialog = false;\r\n            },\r\n            // 提交Dialog编辑\r\n            onCommit(reply){\r\n                if(reply.content == \"\"){\r\n                    this.$message.error(\"内容不能为空！\");\r\n                    return;\r\n                }\r\n                if(this.editNotCreate){ // 编辑回复\r\n                    this.$axios.post(\"/Reply/editReplies\",reply).then((res)=>{\r\n                        if(res.data.flag){\r\n                            this.$message.success(\"编辑成功！\");\r\n                            // 刷新讨论数据\r\n                            this.getReplies();\r\n                            this.EditDialogVisible = false;\r\n                            this.replyData.content = '';\r\n                        }else{\r\n                            this.$message.error(\"回复失败，请稍后重试！\");\r\n                        }\r\n                    })\r\n                    // 使用后关闭编辑模式\r\n                    this.editNotCreate = false;\r\n                }else{  // 创建回复\r\n                    this.$axios.post(\"/Reply/createReplies\",reply).then((res)=>{\r\n                        if(res.data.flag){\r\n                            this.$message.success(\"回复成功！\");\r\n                            // 刷新讨论数据\r\n                            this.getReplies();\r\n                            this.EditDialogVisible = false;\r\n                            this.replyData.content = '';\r\n                        }else{\r\n                            this.$message.error(\"回复失败，请稍后重试！\");\r\n                        }\r\n                    })\r\n                }\r\n            },\r\n        }\r\n    }\r\n</script>\r\n\r\n<style scoped>\r\n    /**\r\n     * 讨论卡片\r\n     */\r\n    #DiscussionCards{\r\n        width: 90%;\r\n        margin: auto;\r\n    }\r\n    /* 发布者头像 */\r\n    #discussionUserAvatar{\r\n        display: block;\r\n        margin-top: 30px;\r\n    }\r\n    /* 发布者 */\r\n    #discussionUser{\r\n        font-size: 18px;\r\n        color: #000000;\r\n    }\r\n    /* 发表时间 */\r\n    #discussionDate{\r\n        color: #8a8a8a;\r\n        font-size: 16px;\r\n        margin-left: 20px;\r\n    }\r\n    /* 讨论标题 */\r\n    #discussionTitle{\r\n        margin-bottom: 20px;\r\n        font-size: 28px;\r\n        font-weight: 600;\r\n        font-family: \"微软雅黑\";\r\n    }\r\n    /* 内容 */\r\n    #discussionContent{\r\n        margin-top: 20px;\r\n        margin-bottom: 20px;\r\n    }\r\n    /* 回复按钮 */\r\n    .functionReply{\r\n        font-size: 20px;\r\n        color: #3a75ff;\r\n    }\r\n    .functionReply:hover{\r\n        cursor:pointer;\r\n    }\r\n    /* 讨论功能栏 */\r\n    #discussionController{\r\n        text-align: left;\r\n        margin-bottom: 20px;\r\n        position: relative\r\n    }\r\n    /* 浏览和点赞 */\r\n    .discussionDetail{\r\n        font-size: 17px;\r\n        color: #3a3a3a;\r\n        margin-left: 40px;\r\n    }\r\n    /**\r\n     * 回复卡片\r\n     */\r\n    #RepliesCards{\r\n        width: 90%;\r\n        margin: auto;\r\n    }\r\n    /* 暂无回复 */\r\n    #NoReplies{\r\n        margin-top: 18px;\r\n        text-align: center;\r\n        color: #8a8a8a;\r\n    }\r\n    /* 每条回复 */\r\n    .RepliesRow{\r\n        margin-top: 18px;\r\n    }\r\n    /* 回复分割线 */\r\n    .ReplyDivider{\r\n        /* 定位 */\r\n        width: 107%;\r\n        position: relative;\r\n        left: -4%;\r\n        margin-bottom: 18px;\r\n    }\r\n    /* 回复人姓名 */\r\n    .fromUserName{\r\n        font-size: 18px;\r\n        color: #818181;\r\n    }\r\n    /* 回复时间 */\r\n    .ReplyDate{\r\n        color: #818181;\r\n        font-size: 16px;\r\n        margin-left: 20px;\r\n    }\r\n    /*　＠目标姓名　*/\r\n    .toUsername{\r\n        color: #3a75ff;\r\n    }\r\n    /*　回复内容　*/\r\n    .ReplyContent{\r\n        margin-top: -10px;\r\n    }\r\n    /* 输入框标题 */\r\n    .discussionInput{\r\n        margin: 20px 0 ;\r\n        font-size: 16px;\r\n    }\r\n\r\n</style>"]},"metadata":{},"sourceType":"module"}