{"ast":null,"code":"import \"core-js/modules/es.json.stringify.js\";\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\nimport SearchBox from \"@/components/SearchBox\";\nexport default {\n  name: \"FileTab\",\n  components: {\n    SearchBox: SearchBox\n  },\n\n  /**\n   * 文件管理\n   */\n  data: function data() {\n    return {\n      // 当前页码\n      fileCurrentPage: 1,\n      // 分页大小\n      filePageSize: 10,\n      // 总页码数\n      fileTotalCount: 1,\n      // 搜索表单数据模型\n      searchName: {\n        title: ''\n      },\n      // 内置查询模型\n      searchFileByName: {\n        title: ''\n      },\n      // 文件上传对话框\n      fileUploadDialogVisible: false,\n      // 文件数据列表\n      fileTableData: [],\n      // 复选框选中数据集合\n      multipleSelection: []\n    };\n  },\n  created: function created() {\n    // 获取文件列表\n    this.getFiles();\n  },\n  methods: {\n    // 获取文件数据\n    getFiles: function getFiles() {\n      var _this = this;\n\n      this.searchFileByName[\"pageSize\"] = this.filePageSize;\n      this.searchFileByName[\"currentPage\"] = this.fileCurrentPage;\n      this.$axios.post(\"/Resource/getPageByCondition\", this.searchFileByName).then(function (res) {\n        if (res.data.flag) {\n          /* 保存公告数据 */\n          _this.fileTableData = res.data.data.records;\n          /* 保存分页数据 */\n\n          _this.fileTotalCount = res.data.data.total;\n          _this.fileCurrentPage = res.data.data.current;\n          _this.filePageSize = res.data.data.size;\n        } else {\n          // 服务故障\n          _this.$message.error(\"信息获取失败！\");\n        }\n      });\n    },\n    // 表格颜色控制\n    tableRowClassName: function tableRowClassName(_ref) {\n      var row = _ref.row,\n          rowIndex = _ref.rowIndex;\n\n      if (rowIndex % 4 === 1) {\n        return 'warning-row';\n      } else if (rowIndex % 4 === 3) {\n        return 'success-row';\n      }\n\n      return '';\n    },\n    // 批量删除文件\n    fileDeleteByIds: function fileDeleteByIds() {\n      var _this2 = this;\n\n      // 获取勾选的resourceId数组\n      var selectIds = [];\n\n      for (var k in this.multipleSelection) {\n        selectIds.push(this.multipleSelection[k].resourceId);\n      } // 确认勾选\n\n\n      if (selectIds.length !== 0) {\n        // 弹框确认\n        this.$confirm('此操作将删除该文件, 是否继续?', '提示', {\n          confirmButtonText: '确定',\n          cancelButtonText: '取消',\n          type: 'warning'\n        }).then(function () {\n          // 执行删除\n          _this2.$axios.post(\"/Resource/deleteFileByIds\", selectIds).then(function (resp) {\n            if (resp.data.flag) {\n              // 删除成功，刷新数据\n              _this2.getFiles(); // 根据路径删除本地文件\n\n\n              for (var _k in _this2.multipleSelection) {\n                _this2.$axios.post(\"/Files/resourceDelete\", _this2.multipleSelection[_k]).then(function (resp) {\n                  if (resp.data === true) {\n                    _this2.$message.success('删除成功！');\n                  } else {\n                    _this2.$message.error('删除失败！');\n                  }\n                });\n              }\n            } else {\n              _this2.$message.error('删除失败！');\n            }\n          });\n        }).catch(function () {\n          // 取消删除\n          _this2.$message.info('取消删除');\n        });\n      } else {\n        // 未勾选数据时提醒\n        this.$message.info('请选择要删除的数据');\n      }\n    },\n    // 批量下载文件\n    fileDownloadByIds: function fileDownloadByIds() {\n      if (this.multipleSelection.length !== 0) {\n        // 使用勾选的resourceId数组\n        for (var k in this.multipleSelection) {\n          this.downloadFile(this.multipleSelection[k]);\n        } // 刷新列表\n\n\n        this.getFiles();\n      } else {\n        // 未勾选数据时提醒\n        this.$message.info('请选择要删除的数据');\n      }\n    },\n    // 查找文件\n    searchFileOnSubmit: function searchFileOnSubmit(name) {\n      this.searchFileByName.title = name;\n      this.getFiles();\n      /* 清空搜索条件 */\n\n      this.searchName.title = '';\n    },\n    // 文件上传成功的钩子-回显并写入数据库\n    handleFileSuccess: function handleFileSuccess(res, file) {\n      var _this3 = this;\n\n      // res 即文件读取路径\n      if (res !== '') {\n        // 组织文件信息\n        var thisFile = {\n          resourceName: res,\n          resourceSize: file.size / 1024,\n          // kb\n          downloadNum: 0\n        }; // 存入课程对应数据库\n\n        this.$axios.post(\"/Resource/uploadOneFile\", thisFile).then(function (res) {\n          if (res.data.flag) {\n            // 更新文件数据\n            _this3.getFiles(); // 成功\n\n\n            _this3.$message.success(\"上传成功！\"); // 关闭对话框\n\n\n            _this3.fileUploadDialogVisible = false;\n          } else {\n            // 服务故障\n            _this3.$message.error(res.data.msg);\n          }\n        });\n      } else {\n        this.$message.error(\"上传失败！\");\n      }\n    },\n    // 文件大小检查\n    beforeFileUpload: function beforeFileUpload(file) {\n      var isLt40M = file.size / 1024 / 1024 < 40;\n      var isNull = file.size === 0;\n\n      if (!isLt40M) {\n        this.$message.error('文件大小不能超过 40MB!');\n      }\n\n      if (isNull) {\n        this.$message.error(\"文件不能为空！\");\n      }\n\n      return isLt40M && !isNull;\n    },\n    // 当某行数据被点击\n    fileRowClick: function fileRowClick(row, column) {\n      if (column.label === '操作') return;\n      this.$refs.fileMultipleTable.toggleRowSelection(row);\n    },\n    // 复选框选中后执行的方法\n    fileHandleSelectionChange: function fileHandleSelectionChange(val) {\n      this.multipleSelection = val;\n    },\n    // 删除单个文件\n    deleteFile: function deleteFile(row) {\n      var _this4 = this;\n\n      // 弹框确认\n      this.$confirm('此操作将删除该文件, 是否继续?', '提示', {\n        confirmButtonText: '确定',\n        cancelButtonText: '取消',\n        type: 'warning'\n      }).then(function () {\n        var resource = {\n          resourceId: row.resourceId\n        }; // 执行删除\n\n        _this4.$axios.post(\"/Resource/deleteFileById\", resource).then(function (resp) {\n          if (resp.data.flag) {\n            // 删除成功，刷新数据\n            _this4.getFiles(); // 根据路径删除本地文件\n\n\n            resource = {\n              resourceName: row.resourceName,\n              courseId: row.courseId\n            };\n\n            _this4.$axios.post(\"/Files/resourceDelete\", resource).then(function (resp) {\n              if (resp.data === true) {\n                _this4.$message.success('删除成功！');\n              } else {\n                _this4.$message.error('删除失败！');\n              }\n            });\n          } else {\n            _this4.$message.error('删除失败！');\n          }\n        });\n      }).catch(function () {\n        // 取消删除\n        _this4.$message.info('取消删除');\n      });\n    },\n    // 下载单个文件\n    downloadFile: function downloadFile(row) {\n      var _this5 = this;\n\n      var url = \"http://\" + window.location.host + \"/Files/resourceDownload\"; // window.open(url, '_blank');\n      // 基于base64的前端下载方式\n\n      var xhr = new XMLHttpRequest();\n      xhr.open('post', url);\n      xhr.responseType = 'blob';\n      xhr.setRequestHeader('Content-Type', 'application/json');\n      xhr.send(JSON.stringify({\n        fileName: row.resourceName\n      }));\n\n      xhr.onload = function () {\n        if (this.status === 200 || this.status === 304) {\n          var fileReader = new FileReader();\n          fileReader.readAsDataURL(this.response);\n\n          fileReader.onload = function () {\n            var a = document.createElement('a');\n            a.style.display = 'none';\n            a.href = this.result;\n            a.download = row.resourceName;\n            document.body.appendChild(a);\n            a.click();\n            document.body.removeChild(a);\n          };\n        }\n      }; // 解决多弹窗重叠问题\n\n\n      setTimeout(function () {\n        _this5.$message.success(\"下载:\" + row.resourceName + \" 完成！\");\n      }, 1000);\n    },\n    // 分页大小变化\n    handleSizeChange: function handleSizeChange(val) {\n      this.filePageSize = val; // 查询所有文件\n\n      this.getFiles();\n    },\n    // 当前页变化\n    handleCurrentChange: function handleCurrentChange(val) {\n      this.fileCurrentPage = val; // 查询所有文件\n\n      this.getFiles();\n    }\n  }\n};","map":{"version":3,"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AA0HA;AACA;AACAA,iBADA;AAEAC;AACAC;AADA,GAFA;;AAKA;AACA;AACA;AACAC,MARA,kBAQA;AACA;AACA;AACAC,wBAFA;AAGA;AACAC,sBAJA;AAKA;AACAC,uBANA;AAOA;AACAC;AACAC;AADA,OARA;AAWA;AACAC;AACAD;AADA,OAZA;AAeA;AACAE,oCAhBA;AAiBA;AACAC,uBAlBA;AAmBA;AACAC;AApBA;AAsBA,GA/BA;AAgCAC,SAhCA,qBAgCA;AACA;AACA;AACA,GAnCA;AAoCAC;AACA;AACAC,YAFA,sBAEA;AAAA;;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AACA;AACA;AACA;AACA,SAPA,MAOA;AACA;AACA;AACA;AACA,OAZA;AAaA,KAlBA;AAmBA;AACAC,qBApBA,mCAoBA;AAAA;AAAA;;AACA;AACA;AACA,OAFA,MAEA;AACA;AACA;;AACA;AACA,KA3BA;AA4BA;AACAC,mBA7BA,6BA6BA;AAAA;;AACA;AACA;;AACA;AACAC;AACA,OALA,CAMA;;;AACA;AACA;AACA;AACAC,iCADA;AAEAC,gCAFA;AAGAC;AAHA,WAIAC,IAJA,CAIA;AACA;AACA;AACA;AACA;AACA,gCAFA,CAGA;;;AACA;AACA;AACA;AACA;AACA,mBAFA,MAEA;AACA;AACA;AACA,iBANA;AAOA;AACA,aAbA,MAaA;AACA;AACA;AACA,WAjBA;AAkBA,SAxBA,EAwBAC,KAxBA,CAwBA;AACA;AACA;AACA,SA3BA;AA4BA,OA9BA,MA8BA;AACA;AACA;AACA;AACA,KAtEA;AAuEA;AACAC,qBAxEA,+BAwEA;AACA;AACA;AACA;AACA;AACA,SAJA,CAKA;;;AACA;AACA,OAPA,MAOA;AACA;AACA;AACA;AACA,KApFA;AAqFA;AACAC,sBAtFA,8BAsFAzB,IAtFA,EAsFA;AACA;AACA;AACA;;AACA;AACA,KA3FA;AA4FA;AACA0B,qBA7FA,6BA6FAC,GA7FA,EA6FAC,IA7FA,EA6FA;AAAA;;AAAA;AACA;AACA;AACA;AACAC,2BADA;AAEAC,wCAFA;AAEA;AACAC;AAHA,UAFA,CAOA;;AACA;AACA;AACA;AACA,8BAFA,CAGA;;;AACA,6CAJA,CAKA;;;AACA;AACA,WA